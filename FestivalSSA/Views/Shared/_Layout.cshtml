<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div id="header">
                <div class="float-left">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Line Up", "Index", "Home")</li>
                            <li>@Html.ActionLink("Tickets", "Insert", "Home")</li>
                            @if (User.IsInRole("Admin")){
                            <li>@Html.ActionLink("Reservaties", "Reservaties", "Home")</li>
                            }
                        </ul>
                    </nav>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div id="footer">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Peter VandenKerckhove</p>
                    <p>2NMCT2</p>
                    <p>Festivalproject Server Side Applications</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
